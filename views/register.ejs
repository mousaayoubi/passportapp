<%- include("./includes/header.ejs") %>
<div class="container">
  <div class="container reg-page">
    <% if (locals.errors) { %> <% errors.forEach(function(error){ %>
    <div class="alert alert-danger"><%= error.msg %></div>
    <% }) %> <% } %> <%- messages() %>
    <form class="form-signin" method="post" action="/users/register">
      <h1 class="h3 mb-3 font-weight-normal text-center">User Registration</h1>
      <label for="inputname" class="sr-only">Name</label>
      <input type="text" name="name" value="<%= (!!locals.name)?name: "" %>"
      class="form-control" placeholder="Name" required autofocus>
      <br />
      <label for="inputname" class="sr-only">Email</label>
      <input type="text" name="email" value="<%= (!!locals.email)?email: ""
      %>"class="form-control" placeholder="Email" required autofocus>
      <br />
      <label for="inputusername" class="sr-only">Username</label>
      <input type="text" name="username" value="<%=
      (!!locals.username)?username: "" %>"class="form-control"
      placeholder="Username" required autofocus>
      <br />
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" name="password" value="<%=
      (!!locals.password)?password: "" %>"class="form-control"
      placeholder="Password" required autofocus>
      <label for="inputPassword2" class="sr-only">Confirm Password</label>
      <input type="password" name="password2" value="<%=
      (!!locals.password2)?password2: "" %>"class="form-control"
      placeholder="Confirm Password" required>
      <p>Have an Account? <a href="/users/login">Login</a></p>
      <button class="btn btn-lg btn-primary btn-block" type="submit">
        Sign in
      </button>
    </form>
  </div>
</div>
<%- include("./includes/footer.ejs") %>
